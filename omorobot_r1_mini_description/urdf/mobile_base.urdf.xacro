<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="insert_mobile_base" params="parent *origin">
        <link name="base_link">
            <visual>
                <origin xyz="0.0445 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.154 0.130 0.04"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.154 0.130 0.04"/>
                </geometry>
            </collision>

            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.5"/>
                <xacro:box_inertia m="0.5" x="0.154" y="0.130" z="0.04"/>
            </inertial>
        </link>

        <joint name="base_link_fixed" type="fixed">
            <parent link="${parent}"/>
            <child link="base_link"/>
            <xacro:insert_block name="origin"/>
        </joint>

        <link name="l_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder radius="${0.065/2}" length="0.027"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder radius="${0.065/2}" length="0.027"/>
                </geometry>
            </collision>

            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.1"/>
                <xacro:cylinder_inertia m="0.1" r="${0.065/2}" h="0.027"/>
            </inertial>
        </link>

        <joint name="l_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="l_wheel_link"/>
            <origin xyz="0 0.0835 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>

        <link name="r_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder radius="${0.065/2}" length="0.027"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder radius="${0.065/2}" length="0.027"/>
                </geometry>
            </collision>

            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.1"/>
                <xacro:cylinder_inertia m="0.1" r="${0.065/2}" h="0.027"/>
            </inertial>
        </link>

        <joint name="r_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="r_wheel_link"/>
            <origin xyz="0 -0.0835 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>

</robot>

